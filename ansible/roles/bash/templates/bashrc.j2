{% for shopt, active in bash.config.shopt.iteritems() %}
{% if active %}
shopt -s {{ shopt }}
{% endif %}
{% endfor %}

{% for alias, value in bash.config.alias.iteritems() %}
alias {{ alias }}='{{ value }}'
{% endfor %}

{% for export, value in bash.config.export.iteritems() %}
export {{ export }}={{ value }}
{% endfor %}

cd /vagrant
